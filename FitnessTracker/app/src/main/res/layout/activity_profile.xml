<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.elec490.fitnesstracker.Profile">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:id="@+id/gaston"
        android:background="@drawable/gaston"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:id="@+id/coyote"
        android:background="@drawable/coyote"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:id="@+id/flounder"
        android:background="@drawable/flounder"
        android:layout_alignTop="@+id/gaston"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:id="@+id/phil"
        android:background="@drawable/phil"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pick Your Profile Icon"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
